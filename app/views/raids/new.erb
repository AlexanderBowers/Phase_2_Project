<div id="raids-new">
    <h2>New Raid Form</h2>
    <% if flash[:errors] %>
        <% flash[:errors].each do |e| %>
            <p><%= e %></p>
        <% end %>
    <% end %>
    <%= form_for @raid do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :description%>
        <%= f.text_field :description%>
        
        <%= f.label :image, "Image URL"%>
        <%= f.text_field :image %>
        
        <%= f.submit %>
        
    <% end %>
</div>