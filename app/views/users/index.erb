<div id="user-list">
   <h2>Users</h2>
   <div class="grid-container">
      <% @users.each do |user| %>
         <div class="grid-item">
            <img src="<%= user[:pix_url] %>" width="150px">
            <%= link_to user[:username], user_path(user) %>
         </div>
      <% end %>
   </div>
</div>
